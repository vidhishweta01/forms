<%= form_with model: @user do |form| %>
  <%= form.label :Username %>
  <%= form.text_field :username, placeholder: 'John Doe' %><br><br>
  <%= form.label :Email %>
  <%= form.text_field :email, placeholder: 'JohnDoe@gmail.com' %><br><br>
  <%= form.label :Password %>
  <%= form.password_field :password %><br><br>
  <%= form.submit 'Submit' %>
<% end %>